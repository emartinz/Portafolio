@model IEnumerable<ToolWorkshop.Data.Entities.Catalog>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().SKU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Tool.EAN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Planogram.Name)
            </th>
            <th>
                Imagen
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SKU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tool.EAN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Planogram.Name)
                </td>
                <td>
                    @if (item.ImageData != null && item.ImageData.Length > 0)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.ImageData)" style="width:50px;height:50px;" />
                    }
                    else
                    {
                        <img src="https://localhost:7005/images/noimage.png" style="width:50px;height:50px;" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SKU">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SKU">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SKU">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>