@model ToolWorkshop.Data.Entities.Tool

@{
    ViewData["Title"] = "Delete";
}
<flash dismissable="true" />
 
<h1>Borrar</h1>

<h3>Esta seguro de querer borrar?</h3>
<div>
    <partial name="_ToolDetails" />    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
    </form>
</div>
