@model ToolWorkshop.Data.Entities.Movement_Detail

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movement"/>
            <partial name="_MovementDetails_Form"/>            
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-controller="Movements" asp-route-id="@Model.Movement." class="btn btn-outline-success" >Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}